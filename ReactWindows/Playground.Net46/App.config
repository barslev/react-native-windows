<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler,log4net" />
  </configSections>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5.1"/>
  </startup>
  <runtime>
    <assemblyBinding xmlns="urn:schemas-microsoft-com:asm.v1">
      <dependentAssembly>
      </dependentAssembly>
    </assemblyBinding>
  </runtime>
  <system.diagnostics>
    <sources>
      <source name="ReactWindows" switchValue="Information">
        <listeners>
          <!--<add name="xmlServer" />
          <add name="TextWriter" />
          <add name="DefaultServer" />-->
          <add name="RNWTraceListener" />
          <remove name="Default"/>
        </listeners>
      </source>
    </sources>
    <sharedListeners>
      <add name="xmlServer" type="System.Diagnostics.XmlWriterTraceListener" initializeData="ReactWindows.svclog" traceOutputOptions="ProcessId, DateTime, ThreadId">
        <filter type="System.Diagnostics.EventTypeFilter" initializeData="All"/>
      </add>
      <add name="TextWriter" type="System.Diagnostics.TextWriterTraceListener" initializeData="ReactWindows.log" traceOutputOptions="ProcessId, DateTime, ThreadId">
        <filter type="System.Diagnostics.EventTypeFilter" initializeData="All"/>
      </add>
      <add name="DefaultServer" type="System.Diagnostics.DefaultTraceListener" traceOutputOptions="DateTime">
        <filter type="System.Diagnostics.EventTypeFilter" initializeData="All"/>
      </add>
      <add name="RNWTraceListener" type="Playground.Net46.RNWTraceListener, Playground.Net46" traceOutputOptions="ProcessId, DateTime, ThreadId" initializeData="c:\temp">
        <filter type="System.Diagnostics.EventTypeFilter" initializeData="All"/>
      </add>
    </sharedListeners>
    <trace autoflush="true" />
  </system.diagnostics>
  <log4net>
    <root>
      <level value="Info" />
      <appender-ref ref="RNWRollingFileAppender" />
    </root>
    <appender name="RNWRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <file/>
      <appendToFile value="true" />
      <maximumFileSize value="10MB" />
      <MaxSizeRollBackups value="3" />
      <rollingStyle value="Composite" />
      <threshold value="INFO" />
      <PreserveLogFileNameExtension value="True" />
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%message%newline" />
      </layout>
    </appender>
  </log4net>

</configuration>
